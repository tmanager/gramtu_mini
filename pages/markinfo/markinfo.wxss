/* pages/markinfo/markinfo.wxss */
page{
  background-color: #F2F3F5;
}
.navbar {
    display: flex;
    border-bottom: 1px solid #eee;
    background-color: white;
}
.navbar-item {
    flex: 1.0;
    text-align: center;
    font-size: 30rpx;
    color: #999;
    margin-bottom: -1px;
}
.navbar-text {
    display: block;
    width: 200rpx;
    padding: 10px;
    margin: auto;
}
.navbar-text.active {
    border-bottom: 2px solid #000;
    color: #000;
    font-weight: bold;
}
.hidden {
    display: none;
}

.wode_item_wrap {
	background-color: #FFF;
	font-size: 14px;
	margin-top: 3px;
	border-top: 1px solid #E5E5E5;
}
.wode_item {
	border-bottom: 1px solid #E5E5E5;
	padding: 0 10px;
	line-height: 40rpx;
	position: relative;
  display: flex;
  flex-direction: row;
}

.wode_item > view{
  width: 100%
}

.wode_name{
  position: absolute;
  width: 500rpx;
  height: 80rpx;
  line-height: 80rpx;
  left: 80rpx;
  top: 0;
}

.turnin-name{
  font-size: 30rpx;
  padding: 20rpx 0 0 0;
}

.turnin-time{
  font-size: 25rpx;
  padding: 10rpx 0;
  color:#999;
}

.coup-detail{
  display: flex;
  flex-direction: row;
  margin: 0 20rpx;
}

.coup-detail > view:nth-child(1){
  flex: 1
}

.coup-detail > view:nth-child(2){
  flex: 1;
  text-align: right;
}
.price{
  height: 40rpx;
  line-height: 40rpx;
  color:#F24F50;
  font-size: 30rpx;
  padding: 20rpx 0 0 0;
}

.status{
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 20rpx;
  font-size: 25rpx;
}

input{
	height: 60rpx;
	line-height: 60rpx;
 	font-family: inherit;
}
.input-list{
	padding: 0 20rpx;
	margin: 20rpx 0;
	background: #fff;
	border-top: 1rpx solid #ddd;
	border-bottom: 1rpx solid #ddd;
}
.input-list .input-item{
	padding: 20rpx 20rpx;
	line-height: 2;
	font-size: 30rpx;
	border-top: 1rpx solid #e8e8e8;
}
.input-list .input-item:first-child{
	border-top: 0;
}
.input-item-label{
	display: block;
	color: #000;
}
.input-item-content{
	color: #333;
	flex:1;
}
.input-item.input-item-full{
	display: block;
}
.input-item.input-item-full .input-item-label{
	width: 100%;
}
.input-item.input-item-full .input-item-content{
	width: 100%;
}
.input-item.input-item-full textarea{
	height: 150rpx;
	border: 1rpx solid #e8e8e8;
	padding: 10rpx;
}
.input-item.input-item-full .img-upload{
	padding: 0;
}
.input-item.input-item-adaption .input-item-label{
	width: auto;
	margin-right: 20rpx;
}

.sm-font{
  font-size:25rpx;
}

.xs-font{
  font-size:20rpx;
}

.gray-font{
  color:#808080;
}

.upload-btn{
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}

.upload-btn > button{
  padding: 10rpx 0;
  line-height: 1.5;
}