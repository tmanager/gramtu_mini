/* pages/turninsettle/turninsettle.wxss */
page{
  background-color: #F2F3F5;
}
.navbar {
    display: flex;
    border-bottom: 1px solid #eee;
    background-color: white;
}
.navbar-item {
    flex: 1.0;
    text-align: center;
    font-size: 30rpx;
    color: #999;
    margin-bottom: -1px;
}
.navbar-text {
    display: block;
    width: 100rpx;
    padding: 10px;
    margin: auto;
}
.navbar-text.active {
    border-bottom: 2px solid #000;
    color: #000;
    font-weight: bold;
}
.hidden {
    display: none;
}

.wode_item_wrap {
	background-color: #FFF;
	font-size: 14px;
	margin-top: 3px;
	border-top: 1px solid #E5E5E5;
}
.wode_item {
  /*height: 220rpx;*/
	border-bottom: 1px solid #E5E5E5;
	padding: 0 10px;
	line-height: 40rpx;
	position: relative;
  display: flex;
  flex-direction: row;
}

.end-info{
  padding: 0 30rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  width: 100%;
}

.end-info > view:first-child{
  margin: 20rpx 0 0 0;
}

.end-info > view:last-child{
  margin: 0 0 20rpx 0;
}

.hori-line{
  padding: 10rpx 0;
}
.hori-line:after{
  position: absolute;
  width: 90%;
  height: 1px;
  content: '';
  background-color: #A6A6A6;
  margin-left: -20rpx;
}
.tui-picker-content{
  padding: 30rpx;
  text-align: center;
}
.tui-picker-name{
  height: 80rpx;
  line-height: 80rpx;
}
.tui-picker-detail{
  height: 50rpx;
  line-height: 50rpx;
  background-color: #fff;
  padding: 0 10px;
  overflow: hidden;
  border:1px solid #A6A6A6;
}

picker{
  display: inline-block!important;
  width: 70%;
  margin: 20rpx 0 0 0;
}
