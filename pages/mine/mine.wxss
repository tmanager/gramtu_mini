/* pages/mine/mine.wxss */
page{
  background-color: #F2F3F5;
}
.personal_info {
	padding: 10px 0;
	background-color: #1D76D0;
  display: flex;
  flex-direction: row;
}

.personal_info > view{
  display: flex;
  flex-direction: column;
}

.photo_wrap {
  padding: 0 20rpx;
  width: 200rpx;
	text-align: center;
}
.info{
   width: 40%;
}
.photo {
	width: 180rpx;
	height: 180rpx;
	border-radius: 50%;
}
.nickname {
	margin-top: 15px;
	color: #FFF;
  font-weight:bold;
}
.mark{
  color:white;
  display: flex;
  flex-direction: row;
  padding-top: 10rpx;
}

.mark > view{
  display: flex;
  flex-direction: column;
}
.mark image{
  padding-top: 5rpx;
  width: 40rpx;
  height:40rpx;
  padding-right: 10rpx;
}
.wode_item_wrap {
	background-color: #FFF;
	font-size: 35rpx;
	margin-top: 10px;
	border-top: 1px solid #E5E5E5;
}
.wode_item {
  height: 90rpx;
	border-bottom: 1px solid #E5E5E5;
	padding: 0 10px;
	line-height: 90rpx;
	position: relative;
}
.wode_name{
  position: absolute;
  width: 500rpx;
  height: 90rpx;
  line-height: 90rpx;
  left: 80rpx;
  top: 0;
}
.arrow_wrap {
    position: absolute;
    width: 60rpx;
    height: 90rpx;
    right: 0;
    top: 0;
}

.arrow_wrap image{
  width: 28rpx;
  height: 28rpx;
}

.wode_icon{
  padding-top: 20rpx;
  width: 50rpx;
  height: 50rpx;
}
.wode_out {
	height: 45px;
	line-height: 45px;
	text-align: center;
	background-color: #FFF;
	margin-top: 10px;
	border-bottom: 1px solid #E5E5E5;
	border-top: 1px solid #E5E5E5;
}

.wode_list{
  display: flex;
  flex-direction: row;
  padding: 30rpx 20rpx;
  background-color: white;
  border-bottom:1px solid #E5E5E5;
}

.wode_image{
  width: 80rpx;
  height: 80rpx;
}
.wode_list > navigator{
  flex: 1;
  text-align:center;
  font-size:30rpx;
