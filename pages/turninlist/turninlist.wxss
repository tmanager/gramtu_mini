page{
  background-color: #F2F3F5;
}
.navbar {
    display: flex;
    border-bottom: 1px solid #eee;
    background-color: white;
}
.navbar-item {
    flex: 1.0;
    text-align: center;
    font-size: 30rpx;
    color: #999;
    margin-bottom: -1px;
}
.navbar-text {
    display: block;
    width: 100rpx;
    padding: 10px;
    margin: auto;
}
.navbar-text.active {
    border-bottom: 2px solid #000;
    color: #000;
    font-weight: bold;
}
.hidden {
    display: none;
}

.wode_item_wrap {
	background-color: #FFF;
	font-size: 14px;
	margin-top: 3px;
	border-top: 1px solid #E5E5E5;
}
.wode_item {
	border-bottom: 1px solid #E5E5E5;
	padding: 0 10px;
	line-height: 40rpx;
	position: relative;
  display: flex;
  flex-direction: row;
}

.wode_item > view{
  width: 100%
}

.wode_name{
  position: absolute;
  width: 500rpx;
  height: 80rpx;
  line-height: 80rpx;
  left: 80rpx;
  top: 0;
}
.arrow_wrap {
    position: absolute;
    width: 60rpx;
    height: 100rpx;
    line-height: 100rpx;
    right: 0;
    top: 0;
}

.arrow_wrap image{
  width: 14px;
  height: 14px;
}

.turnin-name{
  font-size: 25rpx;
  padding: 10rpx 0 0 0;
}

.turnin-time{
  font-size: 25rpx;
  padding: 0 0 10rpx;
  color:#999;
}

.navi{
  border-bottom: 1px solid #E5E5E5;
  margin-left: 20rpx;
}

.price{
  text-align: right;
  height: 80rpx;
  line-height: 80rpx;
  padding-right: 35rpx;
  color:#F24F50;
  font-size: 30rpx;
}

.status{
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 20rpx;
  font-size: 25rpx;
}

