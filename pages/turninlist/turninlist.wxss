.tabbar{ 
  font-size: 25rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  display: flex;
  width: 100%;
  justify-content: center;
  height: 100rpx;
  border-top: 1px solid #C5C5C5;
}

.tabbar > view:nth-child(1){
  flex: 1;
  line-height: 100rpx;
  margin-left: 20rpx;
}
.tabbar > view:nth-child(2){
  flex: 2;
  line-height: 100rpx;
  text-align: right;
  font-size:25rpx;
  padding-right: 20rpx;
}
.tabbar > view:nth-child(3){
  flex: 1;
  text-align: center;
  background-color: #C5C5C5;
  line-height: 100rpx;
  color: white;
}

.tabbar > view:nth-child(4){
  flex: 1;
  text-align: center;
  background-color: #F24F50;
  line-height: 100rpx;
  color: white;
}

.coup_item{
  display: flex;
  flex-direction: row;
  font-size: 25rpx;
}

.coup_item > view:nth-child(1){
  flex: 1;
  text-align: right;
}

.coup_item > view:nth-child(2){
  flex: 3;
}
