/* pages/gram/gram.wxss */
.view-back{
  margin: 0 20rpx;
  background-color: #FDFDFD;
  height: 1000rpx;
  border-radius: 10rpx;
}

.gram-icon{
  padding: 20rpx 30rpx;
  width: 153rpx;
  height: 80rpx;
}

.end-info{
  padding: 0 60rpx;
  font-size: 25rpx;
  line-height: 60rpx;
}

.hori-line{
  padding: 10rpx 0;
}
.hori-line:after{
  position: absolute;
  width: 85%;
  height: 1px;
  content: '';
  background-color: #A6A6A6;
  margin-left: -20rpx;
}
.tui-picker-content{
  padding: 30rpx;
  text-align: center;
}
.tui-picker-name{
  height: 80rpx;
  line-height: 80rpx;
}
.tui-picker-detail{
  height: 50rpx;
  line-height: 50rpx;
  background-color: #fff;
  padding: 0 10px;
  overflow: hidden;
  border:1px solid #A6A6A6;
}

picker{
  display: inline-block!important;
  width: 70%;
  margin: 20rpx 0 0 0;
}

.payment-btn{
  background-color: #7CB1E7;
  padding: 0 20rpx;
  color:white;
  border-radius: 10rpx;
  margin: 30rpx 0;
  width: 300rpx;
}

page{
  background-color: #F2F3F5;
}

.wode_item_wrap {
	background-color: #FFF;
	font-size: 25rpx;
	margin-top: 10rpx;
	border-top: 1px solid #E5E5E5;
}
.wode_item {
  height: 60rpx;
	border-bottom: 1px solid #E5E5E5;
	margin: 0 20px;
	line-height: 60rpx;
	position: relative;
}

.wode_item:last-child {
  height: 60rpx;
	border-bottom: 1px solid #E5E5E5;
	padding: 0 20px;
  margin: 0;
	line-height: 60rpx;
	position: relative;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.wode_item{
 display: flex;
 flex-direction: row; 
}

.wode_item > view:first-child{
  flex: 1.5;
}

.wode_item > view:nth-child(2){
  flex: 3;
}

.hidden {
    display: none;
}

.tabbar{ 
  font-size: 30rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  display: flex;
  width: 100%;
  justify-content: center;
  height: 100rpx;
  border-top: 1px solid #C5C5C5;
}
.tabbar > view:nth-child(1){
  flex: 2;
  line-height: 100rpx;
  margin-left: 20rpx;
}
.tabbar > view:nth-child(2){
  flex: 1;
  line-height: 100rpx;
  text-align: center;
  font-size:30rpx;
  color:white;
  background-color: #F24F50;
}

.tui-fixed-foot{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 10px;
  background-color: #fff;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1000;
}
