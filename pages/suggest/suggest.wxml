<view class="container">
  <view>
		<view class="group-body" style='margin-top:20rpx'>
			<textarea placeholder="请输入您的详细问题，我们将尽快解决" bindinput='getInputValue' id="question"></textarea>
    </view>
    <view class="group-body" style='margin-top:20rpx'>
      <view class="input-list">
				<view class="input-item">
					<text class="input-item-label">联系方式</text>
					<view class="input-item-content">
						<input type="text" placeholder="请输入手机号"  bindinput='getInputValue' id="phone"></input>
					</view>
				</view>
      </view>
    </view>
	</view>
	<view class="btn-submit" style='margin-top:20rpx'>
		<button class="btn-block btn-blue" style='background-color:#2489F3; color:white; width: 95%' bindtap='suggestSubmit'>提交</button>
	</view>
</view>