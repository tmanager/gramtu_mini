  color:#ffffff;
}

.zzfwts{
  margin: 20rpx 20rpx;
  background-color: #2bb673;
  border-radius: 10rpx;
  height: 290rpx;
}

.zzfw-content{
  margin: 0 5rpx 0rpx 5rpx;
  border: 2px solid rgb(43, 182, 115);
  height: 200rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
  flex-wrap: wrap;
  justify-content: space-around;
}

.zzfw-contentzz{
  margin: 0 5rpx 0rpx 5rpx;
  border: 2px solid rgb(255, 200, 3);
  height: 200rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
  flex-wrap: wrap;
  justify-content: space-around;
}

.zzfw-contentzz > view{
  width:33%;
  box-sizing:border-box;
  text-align: center;
}

.zzfw-contentzz > view > view{
  /*margin: 20rpx 30rpx 0;*/
  margin:0 auto;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  text-align: center;
}

.zzfw-contentzz > view > view{
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  background-color: #2AB572;
  text-align: center;
  color:white;
}

.zzfw-contentzz > view > text{
  margin-top: 20rpx;
  font-size: 23rpx;
}


.zzfw-content > navigator{
  width:33%;
  box-sizing:border-box;
  text-align: center;
}

.zzfw-content > navigator > view{
  /*margin: 20rpx 30rpx 0;*/
  margin:0 auto;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  text-align: center;
}

.zzfw-content > navigator > view{
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  background-color: #2AB572;
  text-align: center;
  color:white;
}

.zzfw-content > navigator > text{
  margin-top: 20rpx;
  font-size: 23rpx;
}

.zzfw-icon{
  line-height: 100rpx;
  font-size: 20rpx;
}

.zzfw-icon image{
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
}

.xr-title{
  padding: 20rpx 0rpx 10rpx 30rpx;
  font-size: 26rpx;
  color:black;
}

.xrfl{
  display: flex;
  flex-direction: row;
  padding:10rpx 10rpx;
}

.xrfl > navigator{
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
  box-sizing: border-box;
  color:white;
}

.xrfl > navigator:first-child{
  background-color: #C6BDD2;
  padding: 20rpx 20rpx 20rpx 0;
  width: 48%;
  background: linear-gradient(-115deg,transparent 45rpx,#C6BDD2 0) top right;
  border-radius: 10rpx;
  text-align: center;
}

.xrfl > navigator:nth-child(2){
  background-color: #89C997;
  padding: 20rpx 0rpx 20rpx 45rpx;
  width: 60%;
  background: linear-gradient(65deg,transparent 45rpx,#89C997 0) top right;
  border-radius: 10rpx;
  margin-left: -40rpx;
  font-size: 26rpx;
  text-align: center;
}

